{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "content": {
      "type": "richtext"
    },
    "tags": {
      "type": "customField",
      "default": "[]",
      "options": [
        "acessibilidade",
        "react",
        "js",
        "tecnologia",
        "design",
        "ui/ux"
      ],
      "customField": "plugin::multi-select.multi-select"
    },
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "read_time": {
      "type": "integer"
    },
    "banner": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "related_posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::post.post",
      "mappedBy": "post"
    },
    "post": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::post.post",
      "inversedBy": "related_posts"
    }
  }
}
